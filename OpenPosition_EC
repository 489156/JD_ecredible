  <script>
        const defaultConfig = {
            job_title: "프론트엔드 개발자",
            company_name: "테크 이노베이션",
            hero_description: "혁신적인 기술로 미래를 만들어가는 팀에 합류하세요",
            company_description: "저희 테크 이노베이션은 혁신적인 기술로 더 나은 미래를 만들어가는 IT 기업입니다. 창의적이고 도전적인 환경에서 함께 성장할 인재를 찾고 있습니다.",
            job_description: "사용자 경험을 최우선으로 하는 웹 애플리케이션 개발을 담당하며, 최신 기술 스택을 활용한 프론트엔드 개발 업무를 수행합니다.",
            preferred_qualifications: "TypeScript 사용 경험, Next.js/Nuxt.js 프레임워크 경험, UI/UX 디자인 이해도, 백엔드 개발 경험",
            application_method: "아래 방법으로 지원해주시면 검토 후 연락드리겠습니다. careers@techinnovation.com 또는 온라인 지원서를 통해 지원 가능합니다.",
            additional_info: "서류 전형 합격자에 한해 개별 연락드립니다. 면접 일정은 지원자와 협의하여 진행됩니다. 허위 기재 시 채용이 취소될 수 있습니다. 제출된 서류는 반환되지 않습니다.",
            benefits_description: "직원들의 성장과 행복을 위한 다양한 복리후생을 제공합니다.",
            background_color: "#EBEBEB",
            surface_color: "#FFFFFF",
            text_color: "#000000",
            primary_action_color: "#002147",
            secondary_action_color: "#003366"
        };

        function scrollToApplication() {
            const element = document.getElementById('application-section');
            if (element) {
                element.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
                // 포커스를 지원 섹션으로 이동 (접근성)
                element.focus();
            }
        }
        
        // 키보드 접근성 개선
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' || e.key === ' ') {
                const target = e.target;
                if (target.classList.contains('apply-button')) {
                    e.preventDefault();
                    scrollToApplication();
                }
            }
        });

        async function render(config) {
            // 성능 최적화를 위한 배치 업데이트
            const updates = [];
            
            // 텍스트 콘텐츠 업데이트
            const textUpdates = [
                ['job-title', config.job_title || defaultConfig.job_title],
                ['company-name', config.company_name || defaultConfig.company_name],
                ['hero-description', config.hero_description || defaultConfig.hero_description],
                ['company-description', config.company_description || defaultConfig.company_description],
                ['job-description', config.job_description || defaultConfig.job_description],
                ['application-method', config.application_method || defaultConfig.application_method],
                ['additional-info', config.additional_info || defaultConfig.additional_info],
                ['benefits-description', config.benefits_description || defaultConfig.benefits_description]
            ];
            
            textUpdates.forEach(([id, text]) => {
                const element = document.getElementById(id);
                if (element && element.textContent !== text) {
                    element.textContent = text;
                }
            });
            
            // 우대사항 업데이트
            const preferredList = document.getElementById('preferred-requirements');
            if (preferredList) {
                try {
                    const qualifications = (config.preferred_qualifications || defaultConfig.preferred_qualifications).split(', ');
                    preferredList.innerHTML = qualifications
                        .filter(qual => qual.trim().length > 0)
                        .map(qual => `<li>${qual.trim()}</li>`)
                        .join('');
                } catch (error) {
                    console.error('우대사항 업데이트 오류:', error);
                    preferredList.innerHTML = '<li>우대사항을 불러올 수 없습니다.</li>';
                }
            }
            
            // 색상 업데이트 최적화
            const colors = {
                background: config.background_color || defaultConfig.background_color,
                surface: config.surface_color || defaultConfig.surface_color,
                text: config.text_color || defaultConfig.text_color,
                primary: config.primary_action_color || defaultConfig.primary_action_color,
                secondary: config.secondary_action_color || defaultConfig.secondary_action_color
            };
            
            // CSS 변수로 한 번에 업데이트
            const root = document.documentElement;
            root.style.setProperty('--background-color', colors.background);
            root.style.setProperty('--surface-color', colors.surface);
            root.style.setProperty('--text-color', colors.text);
            root.style.setProperty('--primary-action-color', colors.primary);
            root.style.setProperty('--secondary-action-color', colors.secondary);
            
            // 직접 스타일 적용이 필요한 요소들만 개별 처리
            document.body.style.backgroundColor = colors.background;
            document.body.style.color = colors.text;
            
            const container = document.querySelector('.container');
            if (container) container.style.backgroundColor = colors.surface;
            
            const heroSection = document.querySelector('.hero-section');
            if (heroSection) {
                heroSection.style.background = `linear-gradient(135deg, ${colors.primary} 0%, ${colors.secondary} 100%)`;
            }
            
            const applicationSection = document.querySelector('.application-section');
            if (applicationSection) {
                applicationSection.style.background = `linear-gradient(135deg, ${colors.background} 0%, ${colors.surface} 100%)`;
            }
            
            // 배치 스타일 업데이트
            const styleUpdates = [
                ['.company-section', 'backgroundColor', colors.background],
                ['.stat-item, .detail-card, .application-card, .benefit-item', 'backgroundColor', colors.surface],
                ['.section-title, .detail-title, .application-title, .benefit-title, .stat-number', 'color', colors.primary],
                ['.section-content, .stat-label, .application-description, .benefit-description', 'color', colors.text],
                ['.detail-icon, .application-icon, .benefit-icon', 'fill', colors.primary]
            ];
            
            styleUpdates.forEach(([selector, property, value]) => {
                document.querySelectorAll(selector).forEach(element => {
                    element.style[property] = value;
                });
            });
            
            // 지원하기 버튼 특별 처리
            const applyButton = document.querySelector('.apply-button');
            if (applyButton) {
                applyButton.style.backgroundColor = colors.surface;
                applyButton.style.color = colors.primary;
            }
            
            // 체크마크와 기타 CSS 변수 업데이트
            document.querySelectorAll('.requirement-list li').forEach(li => {
                li.style.setProperty('--check-color', colors.primary);
            });
            
            document.querySelectorAll('.section-title').forEach(element => {
                element.style.setProperty('--primary-color', colors.primary);
            });
        }

        function mapToCapabilities(config) {
            return {
                recolorables: [
                    {
                        get: () => config.background_color || defaultConfig.background_color,
                        set: (value) => {
                            config.background_color = value;
                            window.elementSdk.setConfig({ background_color: value });
                        }
                    },
                    {
                        get: () => config.surface_color || defaultConfig.surface_color,
                        set: (value) => {
                            config.surface_color = value;
                            window.elementSdk.setConfig({ surface_color: value });
                        }
                    },
                    {
                        get: () => config.text_color || defaultConfig.text_color,
                        set: (value) => {
                            config.text_color = value;
                            window.elementSdk.setConfig({ text_color: value });
                        }
                    },
                    {
                        get: () => config.primary_action_color || defaultConfig.primary_action_color,
                        set: (value) => {
                            config.primary_action_color = value;
                            window.elementSdk.setConfig({ primary_action_color: value });
                        }
                    },
                    {
                        get: () => config.secondary_action_color || defaultConfig.secondary_action_color,
                        set: (value) => {
                            config.secondary_action_color = value;
                            window.elementSdk.setConfig({ secondary_action_color: value });
                        }
                    }
                ],
                borderables: [],
                fontEditable: undefined,
                fontSizeable: undefined
            };
        }

        function mapToEditPanelValues(config) {
            return new Map([
                ["job_title", config.job_title || defaultConfig.job_title],
                ["company_name", config.company_name || defaultConfig.company_name],
                ["hero_description", config.hero_description || defaultConfig.hero_description],
                ["company_description", config.company_description || defaultConfig.company_description],
                ["job_description", config.job_description || defaultConfig.job_description],
                ["preferred_qualifications", config.preferred_qualifications || defaultConfig.preferred_qualifications],
                ["application_method", config.application_method || defaultConfig.application_method],
                ["additional_info", config.additional_info || defaultConfig.additional_info],
                ["benefits_description", config.benefits_description || defaultConfig.benefits_description]
            ]);
        }

        // SDK 초기화 및 초기 렌더링
        function initializeApp() {
            if (window.elementSdk) {
                try {
                    window.elementSdk.init({
                        defaultConfig,
                        render,
                        mapToCapabilities,
                        mapToEditPanelValues
                    });
                } catch (error) {
                    console.error('SDK 초기화 실패:', error);
                }
            }
            
            // 초기 렌더링
            try {
                render(defaultConfig);
            } catch (error) {
                console.error('초기 렌더링 실패:', error);
            }
        }

        // DOM이 준비되면 초기화
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initializeApp);
        } else {
            initializeApp();
        }
    </script>
